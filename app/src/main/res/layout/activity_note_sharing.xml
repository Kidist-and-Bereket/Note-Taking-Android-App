<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".NoteSharingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSendEmail"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:text="Email"
            app:srcCompat="@drawable/email" />

        <ImageButton
            android:id="@+id/imgbtnSendSMS"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/sms" />

        <Button
            android:id="@+id/btnShareFacebook"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:text="Facebook"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imgbtnShareTwitter"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/twitter" />

        <ImageButton
            android:id="@+id/imgbtnShareInstagram"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/instagram" />

        <ImageButton
            android:id="@+id/imgbtnShareLinkedin"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/linkedin" />

    </LinearLayout>
</LinearLayout>